<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/news_start_time_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="8:10"/>

    <com.alchemik.radiorepublika.views.CustomFontTextView
        android:id="@+id/news_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/news_start_time_tv"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="fonts/Oswald.ttf"
        android:marqueeRepeatLimit="3"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Kulisy Manipulacji - Flesz Flesz Flesz Flesz Flesz Flesz Flesz"/>

    <TextView
        android:id="@+id/news_type_tv"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/news_start_time_tv"
        android:background="@color/program_live_transparent"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="13sp"
        tools:text="Premiera"/>

    <com.alchemik.radiorepublika.views.CustomFontTextView
        android:id="@+id/news_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/news_title_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/news_type_tv"
        android:fontFamily="fonts/Oswald.ttf"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        tools:text="Kulisy Manipulacji - Flesz"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/news_type_tv"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#3d3a3a"/>
</RelativeLayout>
